{
  "name": "whoiz",
  "license": "MIT",
  "version": "1.0.0",
  "main": "dist/index",
  "types": "dist/index",
  "bin": {
    "whoiz": "./dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint && npm run format && npm run build",
    "version": "git add -A",
    "postversion": "git push && git push --tags",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "lint": "prettier --check \"src/**/*.{js,ts}\""
  },
  "author": {
    "name": "Nick Porter",
    "email": "github.whoiz@surj.email"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/surjikal/whoiz.git"
  },
  "homepage": "https://github.com/surjikal/whoiz",
  "bugs": "https://github.com/surjikal/whoiz/issues",
  "keywords": [
    "whois"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit ${HUSKY_GIT_PARAMS}",
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/jest": "^26.0.10",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^4.2.5",
    "jest": "^27.0.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "date-fns": "^2.15.0",
    "dedent": "^0.7.0",
    "whois": "^2.13.0"
  }
}
